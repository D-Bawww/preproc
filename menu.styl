menu_color = #DCDCDC

.menu
   display flex
   flex-direction row
   justify-content space-around
   width 100%
   padding 10px 0px
   &_item
      width 16%
      padding 10px
      font-weight bold
      text-align center
      &:hover
          background-color menu_color
.page
   background-color menu_color

a
   text-decoration none
   color black
   &:hover
      color #00BFFF

p
   text-indent 30px
   text-align justify
   line-height 2em
   word-spacing 1.5em

@media(max-width:725px)
   .menu
      flex-wrap wrap
      &_item
         width 50%