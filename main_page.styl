.CSS
   .block1
      display flex
      flex-direction column
      padding 10px
      img
         float right
         margin 0px 10px 10px 10px
   .block2
      display flex
      flex-direction row
      justify-content space-around
      margin 10px
      video
         width 40%
   @media(max-width:725px)
      .block1
         text-align center
         flex-direction column
         &-item2
            img
               float none
               width 90%
               padding 15px
      .block2
         flex-direction column
         align-items center
         video
            width 85%